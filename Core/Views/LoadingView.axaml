<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="200"
        Width="200" Height="200"
        MaxWidth="200" MaxHeight="200"
        HasSystemDecorations="False"
        x:Class="ChatOverlay.Core.LoadingView"
        Icon="/Assets/logo.ico"
        WindowStartupLocation="CenterScreen"
        Title="LoadingView"
        TransparencyLevelHint="Transparent" Background="Transparent" >
  <Border BorderThickness="4" BorderBrush="Black" CornerRadius="5" Background="White">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
      <TextBlock Text="Chat overlay" Margin="10" HorizontalAlignment="Center"/>
      <TextBlock Text="Loading..." Margin="10" HorizontalAlignment="Center"/>
      <Grid Width="180" ClipToBounds="True" Margin="0" HorizontalAlignment="Center">
        <ProgressBar Width="160" Height="10" HorizontalAlignment="Center" IsIndeterminate="True" Margin="10"/>
      </Grid>
    </StackPanel>
  </Border>
</Window>
